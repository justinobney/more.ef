@model Domain.Home.HomeCommand
@{
    ViewBag.Title = "Home Page";
}

<br />
<div class="row">
    <div class="col-md-9">
        @using (Html.BeginForm("SquareResult", "Home", FormMethod.Post))
        {
            <form role="form">
                <div class="form-group">
                    <label >Number to square</label>
                    @Html.TextBoxFor(x => x.Number, new { @placeholder = "Pick a number", @type="number", @class="form-control" })
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        }
    </div>
</div>